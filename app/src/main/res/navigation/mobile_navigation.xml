<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.striderproject.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.striderproject.ui.map.MapFragment"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/navigation_track"
        android:name="com.example.striderproject.ui.track.TrackFragment"
        tools:layout="@layout/fragment_track" />
    <fragment
        android:id="@+id/navigation_goal"
        android:name="com.example.striderproject.ui.goal.GoalFragment"
        tools:layout="@layout/fragment_goal" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.striderproject.ui.account.AccountFragment"
        tools:layout="@layout/fragment_account" />

